name: GitHub Actions Practica

on: [push]

jobs:
  Explorando-GitHub Actions:
    runs-on: ubuntu-latest

    steps:
      - run: echo "El flujo de trabajo ha sido disparado en el evento: ${{ github.event_name }}"
      - run: echo "El trabajo se est치 ejecutando en un servidor ${{ runner.os }} hospedado en GitHub"
      - run: echo "El nombre de la rama es: ${{ github.ref }} y tu repositorio es: ${{ github.repository }}"

      - name: Verifica el c칩digo del repositorio
        uses: actions/checkout v2
        run: echo "El repositorio: ${{ github.repository }} ha sido clonado al runner."
        echo "El flujo de trabajo est치 listo para verificar el c칩digo en el runner."

      - name: Listar archivos en el repositorio
        run: ls $(( github.workspace ))

      - run: echo "El estado del trabajo es: ${{ job.status }}"
